    <style name="ImageStyle">
        <item name="cornerSize">
            5%
        </item>
    </style>



    <style name="homeSmallImageStyle">
        <item name="cornerRadius">
            5dp
        </item>
    </style>

    <style name="FragmentPlayerImageStyle">
        <item name="cornerSize">
            5%
        </item>
    </style>
    
    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
